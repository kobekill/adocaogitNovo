< project  xmlns = " http://maven.apache.org/POM/4.0.0 "
	xmlns: xsi = " http://www.w3.org/2001/XMLSchema-instance "
	xsi: schemaLocation = " http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd " >
	< modelVersion > 4.0.0 </ modelVersion >

	< groupId > br.com.animais </ groupId >
	< artifactId > adocao </ artifactId >
	< versão > 0.0.1-INSTANTÂNEO </ versão >
	< embalagem > guerra </ embalagem >

	< nome > adocao </ name >
	< url > http://maven.apache.org </ url >

	< propriedades >
		< failOnMissingWebXml > false </ failOnMissingWebXml >
		< projeto .build.sourceEnconding> UTF-8 </ projeto .build.sourceEnconding>
	</ propriedades >

	< dependências >
		< dependência >
			< groupId > javax.mail </ groupId >
			< artifactId > mail </ artifactId >
			< versão > 1.4.7 </ versão >
		</ dependência >

		< dependência >
			< groupId > javax.activation </ groupId >
			< ArtifactId > activação </ artifactId >
			< versão > 1.1.1 </ versão >
		</ dependência >

		< dependência >
			< groupId > javax.servlet </ groupId >
			< artifactId > javax.servlet-api </ artifactId >
			< versão > 3.1.0 </ versão >
			< escopo > fornecido </ escopo >
		</ dependência >
		< dependência >
			< groupId > org.glassfish </ groupId >
			< artifactId > javax.faces </ artifactId >
			< versão > 2.2.18 </ versão >
		</ dependência >
		< dependência >
			< groupId > org.hibernate </ groupId >
			< artifactId > hibernate-core </ artifactId >
			< versão > 5.4.2.Final </ versão >
		</ dependência >
		< dependência >
			< groupId > mysql </ groupId >
			< artifactId > mysql-connector-java </ artifactId >
			< versão > 5.1.47 </ versão >
		</ dependência >
		< dependência >
			< groupId > org.primefaces </ groupId >
			< ArtifactId > Primefaces </ artifactId >
			< versão > 6.2 </ versão >
		</ dependência >

		< dependência >
			< groupId > org.primefaces.themes </ groupId >
			< artifactId > todos os temas </ artifactId >
			< versão > 1.0.10 </ versão >
		</ dependência >

		< dependência >
			< groupId > org.omnifaces </ groupId >
			< artifactId > omnifaces </ artifactId >
			< versão > 1.14.1 </ versão >
		</ dependência >

		< dependência >
			< groupId > commons-fileupload </ groupId >
			< artifactId > commons-fileupload </ artifactId >
			< versão > 1.3.3 </ versão >
		</ dependência >

		< dependência >
			< groupId > commons-io </ groupId >
			< artifactId > commons-io </ artifactId >
			< versão > 2.4 </ versão >
		</ dependência >

		< dependência >
			< groupId > junit </ groupId >
			< artifactId > june </ artifactId >
			< versão > 4.7 </ versão >
			< escopo > teste </ escopo >
			< tipo > jar </ tipo >
		</ dependência >

	</ dependências >

	< repositórios >
		< repositório >
			< id > prime-repo </ id >
			< nome > Repositório do PrimeFaces Maven </ nome >
			< url > http://repository.primefaces.org </ url >
			< layout > padrão </ layout >
		</ repositório >
	</ repositórios >

	< construção >
		< plugins >

			< plugin >
				< artifactId > maven-compiler-plugin </ artifactId >
				< versão > 3.0 </ versão >
				< configuração >
					< origem > 1,8 </ origem >
					< alvo > 1,8 </ alvo >
				</ configuração >
			</ plugin >

			< plugin >
				< groupId > org.apache.maven.plugins </ groupId >
				< artifactId > maven-war-plugin </ artifactId >
				< versão > 2.3 </ versão >
				< configuração >
					< failOnMissingWebXml > false </ failOnMissingWebXml >
				</ configuração >
			</ plugin >
		</ plugins >
	</ build >

</ projeto >
